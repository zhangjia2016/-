<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp" >

    <ImageView
        android:id="@+id/id_iv_fandian_food_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:padding="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/food_one" />

    <TextView
        android:id="@+id/id_tv_fandian_food_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/id_iv_fandian_food_image"
        android:padding="5dp"
        android:text="我是item"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/id_tv_fandian_sale_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_below="@id/id_tv_fandian_food_name"
        android:layout_toRightOf="@id/id_iv_fandian_food_image"
        android:text="月售100份"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/id_tv_fandian_sale_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_iv_fandian_food_image"
        android:layout_toRightOf="@id/id_iv_fandian_food_image"
        android:text="11"
        android:textColor="@color/index_title_color"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/id_tv_fandian_sale_price"
        android:layout_alignParentRight="true"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/id_iv_fandian_jian"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:visibility="gone"
            android:padding="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/jianhao" />

        <TextView
            android:id="@+id/id_tv_fandian_food_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="0"
            android:visibility="gone"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/id_iv_fandian_add"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/add"
            android:background="@android:color/transparent" />
    </LinearLayout>

</RelativeLayout>