<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/id_iv_waimai_food_image"
        android:layout_gravity="center_vertical"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="fitXY"
        android:padding="5dp"
        android:src="@drawable/food_one" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:paddingBottom="5dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/id_tv_waimai_food_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="茄子炒蛋" />
        <TextView
            android:id="@+id/id_tv_waimai_food_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="人均￥80" />
        <TextView
            android:id="@+id/id_tv_waimai_peisongfei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="配送费:0元(20元起送)" />
        <TextView
            android:id="@+id/id_tv_waimai_peisongshijian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="配送时间: 10:30-14:00 16:00-22:00" />
        
    </LinearLayout>

</LinearLayout>